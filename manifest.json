{
  "name": "WikiClassify",
  "version": "0.5",
  "manifest_version": 2,

  "web_accessible_resources": ["popup/popup_box.htm","popup/plotly-latest.min.js","js/10k_most_common-cat.txt"],

  "description": "Highlight text based on classifications",

  "homepage_url": "http://wikiclassify.com",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "default_locale": "en",

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/icon16.png"
  },

  //"options_page": "options/options.html",

  "content_scripts": [
    {
      "matches": ["https://*.wikipedia.org/*"],
      "js": [
        "popup/popup.js"//,
        //"options/options.js"
      ]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["js/highlighter.js"]
    }
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": [
    "background",
    "tabs",
    "storage",
    "<all_urls>"
  ]
}
