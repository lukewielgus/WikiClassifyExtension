{
  "name": "WikiClassify",
  "version": "0.3",
  "manifest_version": 2,

  "web_accessible_resources": ["popup/popup_box.htm"],

  "description": "Highlight text based on classifications",

  "homepage_url": "http://wikiclassify.com",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "default_locale": "en",

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },

  "browser_action": {
    "default_icon": "icons/icon16.png"
  },

  "options_page": "options/options.html",

  "content_scripts": [

    {
      "matches": ["https://*.wikipedia.org/*"],
      "js": ["popup/popup.js"]
    }

  ],

  "permissions": [
    "background",
    "tabs",
    "storage",
    "<all_urls>"
  ]
}
